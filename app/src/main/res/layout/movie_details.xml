<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="development.alberto.com.trakttvtest.presentation.view.moviedetails.MainMovieDetails">

        <TextView
            android:id="@+id/tvMovieTitleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/top_imageView_margin"
            />
        <ImageView
            android:id="@+id/ivPosterPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/top_imageView_margin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/second_title_text_size"
            android:layout_margin="@dimen/top_imageView_margin"
            android:textStyle="bold"
            android:text="@string/title_overview"/>
        <TextView
            android:id="@+id/tvMoviOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/text_size"
            android:layout_margin="@dimen/top_imageView_margin"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/second_title_text_size"
            android:layout_margin="@dimen/top_imageView_margin"
            android:textStyle="bold"
            android:text="@string/title_release_date"/>
        <TextView
            android:id="@+id/tvMovieReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/top_imageView_margin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/second_title_text_size"
            android:layout_margin="@dimen/top_imageView_margin"
            android:textStyle="bold"
            android:text="@string/vote_average"/>
        <TextView
            android:id="@+id/tvMovieVoteAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/top_imageView_margin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/second_title_text_size"
            android:layout_margin="@dimen/top_imageView_margin"
            android:textStyle="bold"
            android:text="@string/genres"/>
        <TextView
            android:id="@+id/tvMovieGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/top_imageView_margin" />

    </LinearLayout>
</ScrollView>